<!DOCTYPE html>
<html lang="es">
<head>
        <%-include ("includes/head"); %>
        <link rel="shortcut icon" href="img/logos/logo-sin-texto.png" type="image/x-icon">
        <title>Home</title>
        <link rel="stylesheet" href="/css/home.css" />
        
</head>
<body>
<!-- ===========================================HEADER===================================================   -->

<%-include ("includes/header"); %>

<!-- ===========================================MAIN===================================================   -->
<!-- =============BANNER==========-->
<main>
<div><img class="main__banner" src="/img/home/banner.jpg" alt="img-home-banner"></div>

<section>
<!-- =============PRODUCTOS==========-->
<h3 id="ofertas" class="titulos-secciones">CONOCÉ NUESTRAS PROMOCIONES<a href="#">ver más</a> </h3>

        <div  class="main__section__lastvisit">

<% for(product of products) { 
        if (product.in_sale == 1){ %> 
<article id="art1" class="articulos">
<a href="./productos/detalle/<%= product.id %> "> <img class="imagenArticulo" src="img/products/<%=product.img %> " alt=""> </a>
        <div class="detalleArticulos">   
        <p class="precio">$<%= product.price %> </p>
        <p class="descuentos">30% OFF</p>
        <p class="descripciones"><%= product.name %></p>  
        <p><%=product.wineries.name%></p>
                
        </div>
</article>
<% }} %> 


        </div>
</section>

